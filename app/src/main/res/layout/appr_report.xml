<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/masterRelLay">

        <TextView
            android:id="@+id/appr_reportTypeSpinLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/apprentice_header_label"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id="@+id/appr_pb1"
            android:layout_width="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="1dp"
            android:layout_below="@id/appr_reportTypeSpinLabel"
            android:background="@android:color/darker_gray"/>
        <!--===============String Fields=================-->
        <TextView
            android:id="@+id/appr_appNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/apprentice_name_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_pb1" />
        <EditText
            android:id="@+id/appr_appNameEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@id/appr_pb1"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_regNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/reg_number_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_appNameEdit" />
        <EditText
            android:id="@+id/appr_regNumEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:ems="10"
            android:layout_below="@id/appr_appNameEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_localNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/local_number_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_regNumEdit" />
        <EditText
            android:id="@+id/appr_localNumEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@id/appr_regNumEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_hoursLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/appr_hours_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_localNumEdit" />
        <EditText
            android:id="@+id/appr_hoursEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@id/appr_localNumEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_empNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/employer_name_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_hoursEdit" />
        <EditText
            android:id="@+id/appr_empNameEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@id/appr_hoursEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_jobLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/job_location_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_empNameEdit" />
        <EditText
            android:id="@+id/appr_jobLocationEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_below="@id/appr_empNameEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_currentDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/current_date_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_jobLocationEdit" />
        <EditText
            android:id="@+id/appr_currentDateEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@id/appr_jobLocationEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_jobStartLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/job_start_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_currentDateEdit" />
        <EditText
            android:id="@+id/appr_jobStartEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@id/appr_currentDateEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_jobEndLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/job_completion_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_jobStartEdit" />
        <EditText
            android:id="@+id/appr_jobEndEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@id/appr_jobStartEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_jobStewardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/job_steward_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_jobEndEdit" />
        <EditText
            android:id="@+id/appr_jobStewardEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@id/appr_jobEndEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_phoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/appr_phone_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appr_jobStewardEdit" />
        <EditText
            android:id="@+id/appr_phoneEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:layout_below="@id/appr_jobStewardEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/appr_jobTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/job_type_label"
            android:layout_below="@id/appr_phoneEdit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/appr_jobTypeSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appr_phoneEdit"
            android:entries="@array/job_types_items"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <!--====================Checkboxes=============================-->
        <View
            android:id="@+id/appr_pb2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/appr_jobTypeSpinner"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appr_checkboxParentLay"
            android:orientation="horizontal"
            android:layout_below="@id/appr_pb2">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/appr_towCheckLay"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tow_header_label"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <View
                    android:id="@+id/appr_pb3"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/appr_dutyCheckLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duty_header_label"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <View
                    android:id="@+id/appr_pb4"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>
        </LinearLayout>

        <!--==========================Ratings============================-->
        <View
            android:id="@+id/appr_pb5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/appr_checkboxParentLay"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/appr_appraiseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appr_appraise_label"
            android:layout_below="@id/appr_pb5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/appr_appraiseSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appr_pb5"
            android:entries="@array/appr_rating_items"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/appr_relationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appr_relationship_label"
            android:layout_below="@id/appr_appraiseSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/appr_relationSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appr_appraiseSpinner"
            android:entries="@array/appr_rating_items"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/appr_superRateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appr_super_rate_label"
            android:layout_below="@id/appr_relationSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/appr_superRateSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:entries="@array/appr_rating_items"
            android:layout_below="@id/appr_relationSpinner"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/appr_journeyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appr_journey_label"
            android:layout_below="@id/appr_superRateSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/appr_journeySpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:entries="@array/appr_rating_items"
            android:layout_below="@id/appr_superRateSpinner"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/appr_lateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appr_late_label"
            android:layout_below="@id/appr_journeySpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/appr_lateSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appr_journeySpinner"
            android:entries="@array/appr_attendance_spinner"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/appr_absentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appr_absent_label"
            android:layout_below="@id/appr_lateSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/appr_absentSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appr_lateSpinner"
            android:entries="@array/appr_attendance_spinner"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <View
            android:id="@+id/appr_pb7"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/appr_absentSpinner"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/appr_commentsEditLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appr_pb7"
            android:text="@string/comment_edit_label"/>
        <EditText
            android:id="@+id/appr_commentsEdit"
            android:minLines="3"
            android:maxLines="10"
            android:lines="8"
            android:gravity="top|left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appr_commentsEditLabel"
            android:paddingBottom="8dp"
            android:inputType="textMultiLine"/>
        <Button
            android:id="@+id/appr_pushBootan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/button_submit"
            android:layout_below="@id/appr_commentsEdit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/appr_clearBootan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/button_clear"
            android:layout_below="@id/appr_commentsEdit"
            android:layout_toRightOf="@id/appr_pushBootan"
            android:layout_marginLeft="36dp"/>
    </RelativeLayout>
</ScrollView>
