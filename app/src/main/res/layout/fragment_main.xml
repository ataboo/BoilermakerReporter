<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/reportTypeSpinLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/super_header_label"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id="@+id/pb1"
            android:layout_width="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="1dp"
            android:layout_below="@id/reportTypeSpinLabel"
            android:background="@android:color/darker_gray"/>
        <!--===============String Fields=================-->
        <TextView
            android:id="@+id/appNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/apprentice_name_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/pb1" />
        <EditText
            android:id="@+id/appNameEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@id/pb1"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/sinNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sin_number_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/appNameEdit" />
        <EditText
            android:id="@+id/sinNumberEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@id/appNameEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/empNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/employer_name_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/sinNumberEdit" />
        <EditText
            android:id="@+id/empNameEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@id/sinNumberEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/jobLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/job_location_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/empNameEdit" />
        <EditText
            android:id="@+id/jobLocationEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_below="@id/empNameEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/currentDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/current_date_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/jobLocationEdit" />
        <EditText
            android:id="@+id/currentDateEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@id/jobLocationEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/jobStartLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/job_start_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/currentDateEdit" />
        <EditText
            android:id="@+id/jobStartEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@id/currentDateEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/jobEndLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/job_completion_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/jobStartEdit" />
        <EditText
            android:id="@+id/jobEndEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@id/jobStartEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/jobStewardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/job_steward_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/jobEndEdit" />
        <EditText
            android:id="@+id/jobStewardEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@id/jobEndEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/superNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/super_name_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/jobStewardEdit" />
        <EditText
            android:id="@+id/superNameEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@id/jobStewardEdit"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/jobTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/job_type_label"
            android:layout_below="@id/superNameEdit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/jobTypeSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/superNameEdit"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <!--====================Checkboxes=============================-->
        <View
            android:id="@+id/pb2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/jobTypeSpinner"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkboxParentLay"
            android:orientation="horizontal"
            android:layout_below="@id/pb2">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/towCheckLay"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tow_header_label"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <View
                    android:id="@+id/pb3"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dutyCheckLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duty_header_label"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <View
                    android:id="@+id/pb4"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>
        </LinearLayout>

        <!--==========================Ratings============================-->
        <View
            android:id="@+id/pb5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/checkboxParentLay"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/safetySpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/safety_spinner_label"
            android:layout_below="@id/pb5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/safetySpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb5"
            android:entries="@array/eval_spinner_ratings"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/workerSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/worker_spinner_label"
            android:layout_below="@id/safetySpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/workerSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/safetySpinner"
            android:entries="@array/eval_spinner_ratings"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/jobSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_spinner_label"
            android:layout_below="@id/workerSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/jobSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/workerSpinner"
            android:entries="@array/eval_spinner_ratings"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/initSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/init_spinner_label"
            android:layout_below="@id/jobSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/initSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobSpinner"
            android:entries="@array/eval_spinner_ratings"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/capSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cap_spinner_label"
            android:layout_below="@id/initSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/capSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/initSpinner"
            android:entries="@array/eval_spinner_ratings"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/ratingSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/rating_spinner_label"
            android:layout_below="@id/capSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/ratingSpinner"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/capSpinner"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true" />

        <!--=======================Attendance===================================-->
        <View
            android:id="@+id/pb6"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/ratingSpinner"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/absentSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb6"
            android:text="@string/absent_spinner_label"/>
        <Spinner
            android:id="@+id/absentSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb6"
            android:layout_alignParentRight="true"
            android:paddingBottom="8dp"
            android:entries="@array/attendance_spinner_ratings"/>

        <TextView
            android:id="@+id/absentEditLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/absentSpinner"
            android:layout_marginLeft="20dp"
            android:text="@string/absent_edit_label"/>
        <EditText
            android:id="@+id/absentEdit"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/absentSpinner"
            android:paddingBottom="8dp"
            android:inputType="number"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/lateSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/absentEdit"
            android:text="@string/late_spinner_label"/>
        <Spinner
            android:id="@+id/lateSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/absentEdit"
            android:layout_alignParentRight="true"
            android:paddingBottom="8dp"
            android:entries="@array/attendance_spinner_ratings"/>

        <TextView
            android:id="@+id/lateEditLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lateSpinner"
            android:layout_marginLeft="20dp"
            android:text="@string/late_edit_label"/>
        <EditText
            android:id="@+id/lateEdit"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lateSpinner"
            android:paddingBottom="8dp"
            android:inputType="number"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/pb7"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/lateEdit"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/commentsEditLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb7"
            android:text="@string/comment_edit_label"/>
        <EditText
            android:id="@+id/commentsEdit"
            android:minLines="3"
            android:maxLines="10"
            android:lines="8"
            android:gravity="top|left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/commentsEditLabel"
            android:paddingBottom="8dp"
            android:inputType="textMultiLine"/>
        <Button
            android:id="@+id/pushBootan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:layout_below="@id/commentsEdit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>
